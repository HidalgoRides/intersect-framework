{
  "name": "hidalgo-rides/intersect-framework",
  "description": "Web framework built for making dev life a little easier.",
  "type": "project",
  "license": "MIT",
  "keywords": [
    "intersect",
    "framework",
    "hidalgo"
  ],
  "autoload" : {
    "psr-4" : {
      "App\\" : "src/"
    }
  },
  "autoload-dev" : {
    "psr-4" : {
      "Tests\\" : "tests/"
    }
  },
  "require": {
    "hidalgo-rides/intersect-web" : "dev-release/1.3.x",
    "php": "^7.1.3",
    "twig/twig": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.0"
  },
  "config": {
    "discard-changes": true,
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "scripts": {
      "post-create-project-cmd": [
        "@php intersect app:generate-key"
      ],
      "post-root-package-install": [
        "@php -r \"file_exists('./configs/config.php') || copy('./configs/config.php.dev', './configs/config.php');\""
      ]
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
